{
    "compilerOptions": {
        "target": "ESNext",
        "types": ["vite/client"],
        "downlevelIteration": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
        ],
        "checkJs": true,
        "strictNullChecks": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "./",
        "paths": {
            "@root": ["src/root"],
            "@root/components": ["src/root/components"],
            "@root/features": ["src/root/features"],
            "@backendTypes": ["../server/src/types/common"],
            "@components": ["src/components"],
            "@hooks": ["src/hooks"],
            "@assets/*": ["src/assets/*"],
            "@redux/store": ["src/redux/store/store"],
            "@redux/features": ["src/redux/features"],
            "@redux/rootApi": ["src/redux/store/rootApi"],
            "@redux/hooks": ["src/redux/hooks"],
            "@redux/globalReset": ["src/redux/store/globalReset"],
            "@redux/utils": ["src/redux/utils"],
            "@types": ["src/types"],
            "@utils": ["src/utils"],
            "@pages/*": ["src/pages/pages/*"],
            "@subPages/*": ["src/pages/subPages/*"],
            "@layouts": ["src/pages/layouts"],
            "@libs": ["src/libs"],
            "@reExport": ["src/reExport"],
            "@typeGuards": ["src/typeGuards"],
            "@shared": ["../shared"],
            "@generated": ["src/generated"],
            "@vars": ["src/vars"],
            "@i18n": ["src/i18n"],
            "@locales/*": ["./locales/*"],
        },
    },
    "include": [
        "src", 
        "decloration.d.ts",
        "../node_modules/types-string"
    ]
}