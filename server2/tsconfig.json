{
    "extends": "ts-node/node16/tsconfig.json",
    "ts-node": {
      "transpileOnly": false,
      "files": true,
    },
    "compilerOptions": {
        "strictNullChecks": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "moduleResolution": "node",    
        "module": "NodeNext",
        "target": "ESNext",
        "strict": true,
        "alwaysStrict": true,
        "pretty": true,
        "noImplicitAny": true,
        "baseUrl": "./",
        "paths": {
            "@utils": ["src/utils/index"],
            "@database": ["src/database/index"],
            "@errors": ["src/errors/index"],
            "@routers": ["src/routers/index"],
            "@shared": ["../shared/index"],
            "@middlewares": ["src/middlewares/index"],
            "@types": ["src/types/index"],
            "@validators": ["src/validators/index"],
            "@services": ["src/services/index"],
            "@controllers": ["src/controllers/index"],
            "@dto": ["src/dto/index"],
            "@emails": ["src/emails/index"],
            "@root": ["src/server"],
            "@subscription": ["src/subscription/index"],
            
            // "@models": ["src/models/index"],
            // "@models/schemas": ["src/models/schemas/index"],
            // "@routes": ["src/routes/index"],
            // "@socket": ["src/socket/index"],
            // "@server": ["src/server"],
            // "@subscription": ["src/subscription/index"],
            // "@subscription/helpers": ["src/subscription/subscriptionHelpers"],
            // "@emails": ["src/emails/index"],
            // "@emails/components": ["src/emails/components/index"],
            // "@assets": ["src/assets/index"],
        },
    },
    "include": [
        "src",
        "declaration.d.ts", 
    ]
}